# configuration file; move to ~/.pyimcrc
# this configuration file configures pyimc to access pidgin as well as skype 
# and provide the contacts in a dmenu vertically

[DEFAULT]
skype = True
pidgin = True
menu = dmenu -l 10 -ni -rs -i -xs -x 680 -y 200 -w 240 -fn 'xft:Inconsolata:size=11' -nb #000000 -nf #9999cc -sb #000066 -sf #ffffff
prefer_online = True
sort_order = ['icq', 'xmpp', 'skype']
